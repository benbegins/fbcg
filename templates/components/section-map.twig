{% set contact = options.contact_infos %}
<section class="relative overflow-hidden bg-blue bg-opacity-5 py-section-mobile lg:py-section-desktop">
	<div class="container lg:grid lg:gap-6 lg:grid-cols-4">
		<div class="lg:pr-6">
			<h2 class="text-xl lg:text-2xl font-semibold mb-2 lg:mb-4">Où nous trouver</h2>
			<p class="mb-6 lg:mb-8 leading-relaxed">Rencontrez la FBCG : vos  experts en distribution et stockage de métaux non-ferreux.</p>
			{% if not hide_contact_button %}
				{% include "components/btns.twig" with { primary: true, text: 'Contactez-nous', link: contact_page.link } %}
			{% endif %}
		</div>
		<div class="lg:col-span-3">
			<div class="relative after:block after:absolute after:inset-0 after:bg-gray after:rounded-md after:translate-x-1.5 after:translate-y-1.5 after:-z-10 after:transition-transform after:duration-300 lg:hover:after:translate-x-0 lg:hover:after:translate-y-0">
				<a class="block my-8 lg:mt-0 w-full aspect-video rounded-md overflow-hidden border border-gray lg:aspect-[5/2]" href="{{contact.google_map}}" title="Voir sur Google Maps">
					<picture>
						<source media="(min-width: 768px)" srcset="{{theme.link}}/src/images/map-desktop.png">
						<img src="{{theme.link}}/src/images/map-mobile.png" alt="FBCG sur Google Map" class="w-full h-full object-cover">
					</picture>
				</a>
			</div>
			<div class="grid gap-4 md:grid-cols-3">
				<div>
					<h3 class="font-bold mb-1 md:mb-2">FBCG SA</h3>
					<p>Distributeur stockiste</p>
				</div>
				<div>
					<h3 class="font-bold mb-1 md:mb-2">Adresse</h3>
					<p>{{ contact.adress}}</p>
				</div>
				<div>
					<h3 class="font-bold mb-1 md:mb-2">Contact</h3>
					<p>{{ contact.phone}}</p>
					<p>
						<a href="mailto:{{contact.email}}">{{ contact.email }}</a>
					</p>
				</div>
			</div>
		</div>
	</div>
	<img src="{{theme.link}}/src/images/shapes/shape-02.png" alt="" class="absolute w-1/2 right-0 top-3/4 pointer-events-none md:hidden">
	<img src="{{theme.link}}/src/images/shapes/shape-03.png" alt="" class="absolute w-1/5 left-0 bottom-0 pointer-events-none hidden lg:inline">
</section>
